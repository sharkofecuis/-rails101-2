<div class="col-md-4 col-md-offset-4">
    <h2>提出你的想法</h2>

    <hr>
    <%= form_for @group do |f| %>
    <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    簡要
    <%= f.text_field :title %>
    <br>


    詳細說
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
